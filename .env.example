# SMTP Email Configuration
# Copy this file to .env and fill in your credentials

# SMTP Host (e.g., smtp.gmail.com, smtp.sendgrid.net, smtp-mail.outlook.com)
SMTP_HOST=smtp.gmail.com

# SMTP Port (usually 587 for TLS, 465 for SSL, 25 for non-secure)
SMTP_PORT=587

# SMTP Authentication (use full email address for most servers)
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender details
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Meta Recovery Form

# Optional: Enable/disable secure connection
SMTP_SECURE=false

# Email recipients for notifications
ADMIN_EMAIL=admin@yourdomain.com
